<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <base href="/" target="_blank">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" sizes="128x128" href="static/icon.png">
    <!-- <script type="module" src="https://unpkg.com/@microsoft/fast-components"></script> -->
    <script type="module" src="static/fast-components.min.js"></script>
    <script src="static/index.js"></script>
    <title>{@title}</title>
    <style>
        :root {
            --background-color: #181818;
            --navbar-height: 94px;
            --section-height-spacing: 100px 0px;
            --section-height-spacing-mobile: 50px 0px;
        }

        html,
        body {
            background-color: var(--background-color);
            font-family: SegoeUIVF, Segoe UI, SegoeUI, Helvetica Neue, Helvetica, Arial, sans-serif;
            max-width: 800px;
            margin: 0 auto;
            padding: 1em;
        }

        fast-card {
            margin-right: 12px;
            width: 140px;
        }
        
        .header {
            display: inline-flex;
            width: 100%;
        }

        .header > .nav {
            margin: auto 0 auto auto;
        }

        .form {
            width: 100%;
            display: inline-flex;
            place-items: flex-end;
            margin-bottom: 12px;
        }
        .form > #field {
            width: 100%;
        }
        .form > #submit {
            width: 96px;
            margin-left: 1em;
        }

        .title {
            font-weight: bold;
            text-overflow: ellipsis;
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical; 
            -webkit-line-clamp: 2;
        }

        .content {
            width: 100%;
            display: flex;
            flex-direction: row;
        }
        .content[hidden] {
            display: none;
        }

        .desc {
            margin: auto 0 auto 12px;
            width: 100%;
        }

        .list {
            display: flex;
            flex-wrap: wrap;
        }
    </style>
</head>

<body>

    <fast-design-system-provider use-defaults>
        <div class="header">
            <h1>DownHost</h1>
            <div class="nav">
                <fast-button id="settings"></fast-button>
            </div>
        </div>
        <div class="form">
            <fast-text-field appearance="outline" placeholder="Search or put gallery link here..." autofocus id="field">
            </fast-text-field>
            <fast-button id="submit" hidden>Download</fast-button>
        </div>
        <div id="list" class="list">
        </div>
        <fast-dialog id="settings-dialog" modal hidden>
            <div>
                <h2>Dialog with text and a button.</h2>
                <fast-button id="dialog-close">Close</fast-button>
            </div>
        </fast-dialog>
    </fast-design-system-provider>
